<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
	prefWidth="800.0" xmlns="http://javafx.com/javafx/25"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.um.informatica.TpvFx.adapters.display.TiendaController"  stylesheets="@estilos.css">
	
	<children>
		<MenuBar layoutY="2.0" prefHeight="25.0" prefWidth="800.0">
			<menus>
				<Menu mnemonicParsing="false" text="Tienda">
					<items>
						<MenuItem mnemonicParsing="false" text="Configuración" />
						<MenuItem mnemonicParsing="false" text="Salir" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Ayuda">
					<items>
						<MenuItem mnemonicParsing="false"
							text="Acerca de miTienda" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
		<ScrollPane layoutY="27.0" prefHeight="292.0"
			prefWidth="471.0" fx:id="panelProductos">
			<content>
				<ScrollBar nodeOrientation="RIGHT_TO_LEFT"
					orientation="VERTICAL" prefHeight="277.0" prefWidth="14.0" />
			</content>
		</ScrollPane>
		<Button layoutX="523.0" layoutY="326.0" mnemonicParsing="false" prefHeight="56.0" prefWidth="180.0" styleClass="boton-personalizado" text="Comprar"  onAction="#confirmarCompra"/>

		<TextField layoutX="20.0" layoutY="335.0" prefHeight="25.0"
			prefWidth="258.0" promptText="Escriba nombre o descripción" fx:id="filtroProductos"/>
		<Button layoutX="289.0" layoutY="335.0" mnemonicParsing="false"
			text="Buscar Producto" onAction="#buscarProducto"/>
		<Button layoutX="289.0" layoutY="365.0" mnemonicParsing="false" prefWidth="102"
			text="Limpiar filtro" onAction="#limpiarFiltro"/>
		<ButtonBar prefHeight="40.0" prefWidth="200.0" />
		<Button layoutX="723.0" layoutY="354.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="72.0" text="Stock" onAction="#irAStock"/>		
		<TableView layoutX="481.0" layoutY="27.0" prefHeight="262.0"
			prefWidth="311.0" fx:id="tablaProductos">
			<columns>
				<TableColumn prefWidth="168.0" text="Producto" fx:id="colDescripcion"/>
				<TableColumn prefWidth="71.0" text="Cantidad" fx:id="colCantidad"/>
				<TableColumn prefWidth="70.0" text="Precio" fx:id="colPrecio"/>
			</columns>
		</TableView>
		<Button layoutX="721.0" layoutY="294.0" mnemonicParsing="false"
			prefHeight="25.0" prefWidth="72.0" text="Quitar" onAction="#quitarProducto" />
		<Label layoutX="494.0" layoutY="298.0" text="Total:" />
		<TextField editable="false" layoutX="534.0" layoutY="294.0"
			prefHeight="25.0" prefWidth="72.0" fx:id="totalField"/>
	</children>
</Pane>
